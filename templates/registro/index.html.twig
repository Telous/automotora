{% extends 'base.html.twig' %}

{% block title %}Registro {% endblock %}

{% block body %}
    <h1>Genera Registro</h1>

    <table id="tabla-1" class="table table-striped table-bordered" style="width:100%"
        <thead>
            <tr>
                <th>Id</th>
                <th>Comentarios</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for registro in registros %}
            <tr>
                <td>{{ registro.id }}</td>
                <td>{{ registro.comentarios }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('registro_edit', {'id': registro.id}) }}"><i class="far fa-edit"></i> Editar</a>
                        <a class="btn btn-danger btn-modal-delete" data-delete="{{ path('registro_delete', {'id': registro.id}) }}" data-token="{{ csrf_token('delete' ~ registro.id) }}" data-toggle="modal" data-target="#modalDelete" href="">Borrar</a>
                    </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No existe</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
<script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="//cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>
<script>
    $(document).ready( function () {
        $('.tabla-1').DataTable();
    } );
</script>
{% endblock %}