{% block choice_widget_expanded %}
    <div {{ block('widget_container_attributes') }}>
    <ul class="list-inline">
    {% for child in form %}
        {% if multiple %}
            <li><div class="checkbox">
        {% else %}
            <li><div class="radio">
        {% endif %}

        {{ form_widget(child) }}
        </div></li>
    {% endfor %}
    </ul>
    </div>
{% endblock choice_widget_expanded %}

{# checkbox and radio #}

{% block checkbox_row %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}    
    <div class="form-group{% if not valid %} has-error{% endif %}">
        <div class="checkbox">        
        <label for="{{ id }}">
            <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} /><b>{{ label }}</b>
        </label>
        </div>
    </div>
{%- endblock checkbox_row %}

{% block radio_row %}
    <div class="form-group{% if not valid %} has-error{% endif %}">
        <div class="radio">
        <label for="{{ id }}">
            <input type="radio" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} /><b>{{ label }}</b>
        </label>
        </div>
    </div>
{%- endblock radio_row %}

{# Errors #}

{% block form_row -%}
    <div class="form-group{% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}">
        {{- form_label(form) -}}
        {{- form_widget(form) -}}
    </div>
{%- endblock form_row %}

{% block form_errors -%}
    {% if errors|length > 0 -%}
        <div class="alert alert-danger">
            <ul class="list-unstyled">
                {%- for error in errors -%}
                    <li><span class="glyphicon glyphicon-exclamation-sign"></span> {{ error.message }}</li>
                {%- endfor -%}
            </ul>
        </div>

    {%- endif %}
{%- endblock form_errors %}