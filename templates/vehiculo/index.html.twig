{% extends 'base.html.twig' %}

{% block title %}Vehiculos{% endblock %}

{% block body %}
    <h1>Vehiculos </h1>

    <table id="tabla-1" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Chasis</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>AÃ±os</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for vehiculo in vehiculos %}
            <tr>
                <td>{{ vehiculo.id }}</td>
                <td>{{ vehiculo.chasis }}</td>
                <td>{{ vehiculo.marca }}</td>
                <td>{{ vehiculo.modelo }}</td>
                <td>{{ vehiculo.year }}</td>
                     <td>
                        <a class="btn btn-primary" href="{{ path('vehiculo_edit', {'id': vehiculo.id}) }}"><i class="far fa-edit"></i>Editar</a>
                        <a class="btn btn-danger btn-modal-delete" data-delete="{{ path('vehiculo_delete', {'id': vehiculo.id}) }}" data-token="{{ csrf_token('delete' ~ vehiculo.id) }}" data-toggle="modal" data-target="#modalDelete" href="">Borrar</a>
                    </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
<script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="//cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>
<script>
    $(document).ready( function () {
        $('.tabla-1').DataTable();
    } );
</script>
{% endblock %}